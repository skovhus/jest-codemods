{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["*.*", "src"],
  "exclude": ["src/**/*.test.ts"]
}

{
  "name": "jest-codemods",
  "version": "0.21.0",
  "description": "Codemods for migrating test files to Jest",
  "license": "MIT",
  "repository": "skovhus/jest-codemods",
  "author": {
    "name": "Kenneth Skovhus",
    "email": "kenneth.skovhus@gmail.com",
    "url": "https://github.com/skovhus"
  },
  "bin": "bin/jest-codemods.js",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "check": "npm run lint && npm run test:cov",
    "check:bail": "yarn lint:bail && npm run test:cov",
    "clean": "rm -rf lib coverage npm-debug.log dist",
    "lint": "yarn run lint:bail --fix",
    "lint:bail": "eslint src --ext js,ts,tsx",
    "format": "prettier --ignore-path .gitignore --write './**/*.js'",
    "prepare": "npm run build",
    "prepublish": "npm run clean && npm run check:bail",
    "ci": "npm run check:bail && codecov",
    "test:cov": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "test": "jest --runInBand"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "jest --findRelatedTests"
    ]
  },
  "keywords": [
    "codemod",
    "jest",
    "ava",
    "tape",
    "mocha",
    "chai",
    "proxyquire",
    "migrate",
    "migrations",
    "upgrade",
    "transform",
    "jscodeshift",
    "codemods"
  ],
  "dependencies": {
    "chalk": "^2.4.2",
    "execa": "^2.1.0",
    "globby": "^10.0.1",
    "inquirer": "^7.0.0",
    "is-git-clean": "^1.1.0",
    "jscodeshift": "^0.6.4",
    "meow": "^5.0.0",
    "update-notifier": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.3.3",
    "codecov": "^3.6.1",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node"
  }
}

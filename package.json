{
  "name": "jest-codemods",
  "version": "0.22.1",
  "description": "Codemods for migrating test files to Jest",
  "license": "MIT",
  "repository": "skovhus/jest-codemods",
  "author": {
    "name": "Kenneth Skovhus",
    "email": "kenneth.skovhus@gmail.com",
    "url": "https://github.com/skovhus"
  },
  "bin": "bin/jest-codemods.js",
  "engines": {
    "node": ">=10"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib coverage npm-debug.log dist",
    "lint": "yarn run lint:bail --fix",
    "lint:bail": "eslint src --ext js,ts,tsx",
    "prepublishOnly": "yarn clean && yarn verify:bail",
    "test:cov": "yarn test --coverage",
    "test:watch": "yarn test --watch",
    "test": "jest --runInBand",
    "verify": "yarn lint && yarn build && yarn test:cov",
    "verify:bail": "yarn lint:bail && yarn verify",
    "ci": "yarn verify:bail && codecov"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "jest --findRelatedTests"
    ]
  },
  "keywords": [
    "codemod",
    "jest",
    "ava",
    "tape",
    "mocha",
    "chai",
    "proxyquire",
    "migrate",
    "migrations",
    "upgrade",
    "transform",
    "jscodeshift",
    "codemods"
  ],
  "dependencies": {
    "chalk": "^3.0.0",
    "execa": "^2.1.0",
    "globby": "^10.0.1",
    "inquirer": "^7.0.0",
    "is-git-clean": "^1.1.0",
    "jscodeshift": "^0.9.0",
    "meow": "^5.0.0",
    "update-notifier": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/jscodeshift": "^0.7.1",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "codecov": "^3.6.1",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.5",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node"
  }
}
